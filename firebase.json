{
  "firestore": {
    "rules": "client/firestore.rules",
    "indexes": "client/firestore.indexes.json"
  },
  "storage": {
    "rules": "client/storage.rules"
  },
  "hosting": {
    "target": "landing",
    "public": "landing/out",
    "ignore": ["firebase.json", "**/.*", "**/node_modules/**"],
    "rewrites": [
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  }
}
